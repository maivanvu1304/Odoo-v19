<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Form View -->
        <record id="view_geega_tender_form" model="ir.ui.view">
            <field name="name">geega.tender.form</field>
            <field name="model">geega.tender</field>
            <field name="arch" type="xml">
                <form string="Tender">
                    <header>
                        <field name="tender_stage" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="tender_no"/>
                            </h1>
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Tender Title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="lead_id"/>
                                <field name="user_id"/>
                                <field name="vehicle_type"/>
                                <field name="model"/>
                            </group>
                            <group>
                                <field name="negotiation_status"/>
                                <field name="tender_status"/>
                                <field name="poc_required"/>
                                <field name="approval_status"/>
                                <field name="submission_date"/>
                                <field name="department"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Remarks">
                                <field name="remarks"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_geega_tender_tree" model="ir.ui.view">
            <field name="name">geega.tender.tree</field>
            <field name="model">geega.tender</field>
            <field name="arch" type="xml">
                <list string="Tenders">
                    <field name="tender_no"/>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="lead_id"/>
                    <field name="user_id"/>
                    <field name="vehicle_type"/>
                    <field name="model"/>
                    <field name="negotiation_status" widget="badge" decoration-success="negotiation_status == 'success'" decoration-danger="negotiation_status == 'failed'"/>
                    <field name="tender_stage" widget="badge"/>
                    <field name="tender_status" widget="badge" decoration-success="tender_status == 'success'" decoration-danger="tender_status == 'failed'"/>
                    <field name="submission_date"/>
                </list>
            </field>
        </record>

        <!-- Action -->
        <record id="action_geega_tender" model="ir.actions.act_window">
            <field name="name">Tenders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">geega.tender</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_geega_tender"
                  name="Tenders"
                  parent="geega_crm.menu_geega_crm_root"
                  action="action_geega_tender"
                  sequence="20"/>

    </data>
</odoo>
